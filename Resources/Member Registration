[[!Register?
    &submitVar=`registerbtn`
    &activation=`0`
    &submittedResourceId=`8`
    &usergroups=`Desloge_Members`
    &successMsg=`Thanks for registering!`
    &useExtended=`1`
    &validate=`firstName:required:regexp=^/[a-zA-Z]/^,
      lastName:required:regexp=^/[a-zA-Z]/^,
      email:required:email,
      username:required,
      password:required:minLength=^2^,
      password_confirm:password_confirm=^password^`
]]
[[!FormIt?
   &validate=`dobDay:required:minLength=`1`,
      dobMonth:required:minLength=`1`,
      dobYear:required:minLength=`1``
]]
[[!$member_registration]]
